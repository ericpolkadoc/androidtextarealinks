<Alloy>
	<Collection src="Messages" instance="true" id="messagesCollection"/>
	<Model src="Messages" instance="true" id="messagesModel"/>
	<Window>
		<View id="myView">
			<ScrollView
				id="messagesListView"
				layout="vertical"
				width="Ti.UI.FULL"
				height="Ti.UI.FULL"
				scrollType="vertical"
				>
				<View 
					id="messageList" 
					class="messageList"
					layout="vertical"
					dataCollection="$.messagesCollection"
					>
					<Require src="UI/ui.message"
						mid="{id}"
						mtype="{type}"
						sent_at="{sent_at}"
						read_at="{read_at}"
						content="{content}"
						incoming="{incoming}"
						from="{from}"
						to="{to}"
						links="{links}"
					/>
				</View>
			</ScrollView>
		</View>
	</Window>
</Alloy>
